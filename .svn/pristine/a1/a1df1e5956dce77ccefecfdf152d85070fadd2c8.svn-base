<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical" >

    <include
        android:id="@+id/setting_title"
        layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#0C0C0C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#AABFAA" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:text="@string/machine_config"
            android:textColor="#AA9FFF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />

    <RelativeLayout
        android:id="@+id/setting_relative_deviceNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/equipment_code" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_devicenumber_selector" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_tv_physicallogo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/physical_number" />
        
        <TextView 
            android:id="@+id/setting_tv_uniqueCode"
            android:layout_toRightOf="@id/setting_tv_physicallogo"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />
    
    <RelativeLayout
		android:id="@+id/setting_relative_register"        
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/equipment_registration" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#AABFAA" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:text="@string/server_config"
            android:textColor="#AA9FFF" />
    </LinearLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />
     
     <RelativeLayout
         android:id="@+id/setting_relative_ipconfig"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/ip_setting" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_devicenumber_selector" />

    </RelativeLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#646464" />
    

</LinearLayout>