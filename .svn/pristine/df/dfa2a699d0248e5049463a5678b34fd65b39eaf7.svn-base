<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/start_table_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__ab_transparent_dark_holo"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/state_start"
        android:textColor="#33b5e5"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/manNum"
            android:textColor="#000000"
            android:textSize="19sp" />

        <cn.com.choicesoft.view.ClearEditText
            android:id="@+id/start_manNumEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/edittext_bg"
            android:digits="0123456789"
            android:drawableRight="@drawable/delete_selector"
            android:ems="10"
            android:hint="@string/repast_man"
            android:inputType="number"
            android:maxLength="3"
            android:padding="8dp"
            android:textSize="18sp" >

            <requestFocus />
        </cn.com.choicesoft.view.ClearEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/womanNum"
            android:textColor="#000000"
            android:textSize="19sp" />

        <cn.com.choicesoft.view.ClearEditText
            android:id="@+id/start_womanNumEdit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/edittext_bg"
            android:digits="0123456789"
            android:drawableRight="@drawable/delete_selector"
            android:ems="10"
            android:hint="@string/repast_woman"
            android:inputType="number"
            android:maxLength="3"
            android:padding="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/start_isVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="10dp"
        android:button="@drawable/checkbox_selector"
        android:text="@string/isVip"
        android:textColor="#A20055"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/start_tishi"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:lines="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#aaa" >

        <Button
            android:id="@+id/dia_btn_peoplesumcertainbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:text="@string/confirm" />

        <Button
            android:id="@+id/dia_btn_peoplesumcancelbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:text="@string/cancle" />
    </LinearLayout>

</LinearLayout>