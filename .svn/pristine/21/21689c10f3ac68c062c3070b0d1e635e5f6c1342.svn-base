<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="250.0dip"
              android:layout_gravity="center"
              android:layout_height="wrap_content"
              android:background="#999999"
              android:orientation="vertical">

    <TextView
            android:id="@+id/dia_title"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:background="@drawable/dialog_title"
            android:textColor="#000000"
            android:gravity="center"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_main"
            android:orientation="vertical">

        <View
                android:id="@+id/dialog_view"
                android:layout_width="wrap_content"
                android:layout_height="80dip"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="20dip">

            <Button
                    android:id="@+id/dialog_cancelbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dia_btn_selector"/>

            <Button
                    android:id="@+id/dialog_certainbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/dia_btn_selector"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>