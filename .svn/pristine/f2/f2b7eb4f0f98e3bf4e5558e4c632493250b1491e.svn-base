<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="#DCDCDC" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/chinese_dia_softsetting_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="18"
                android:background="@drawable/setting_button_background"
                android:gravity="center"
                android:text="@string/succeed"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/chinese_dia_starttable_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingRight="30dp"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip"
                android:text="@string/machine_set"
                android:textColor="#444444" />

            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_classify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/soft_setting_first_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/chinese_taiweihuafenfanghsi_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/table_divide_mode"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/chinese_taiweihuafenfanghsi_classifyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/chinese_taiweihuafenfanghsi_textview"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:scaleType="matrix" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_ifdisguishSex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_middle_selector"
                android:clickable="true"
                android:visibility="gone"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/chinese_dia_softsetting_isDisguishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/whether_men_and_women"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ToggleButton
                    android:id="@+id/chinese_dia_softsetting_isDisguishToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/chinese_dia_softsetting_isDisguishTextView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/toggle_bg"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_deviceencode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_middle_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/equipment_code"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:src="@drawable/softsetting_submenu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_setbackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_middle_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/chinese_dia_tv_setbackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                     android:layout_centerVertical="true"
                    android:text="@string/in_the_background"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button 
                    android:id="@+id/chinese_dialog_chongzhibackground_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/chongzhi_button_bg"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/chinese_dia_tv_setbackground"
                    android:layout_alignTop="@+id/chinese_dia_tv_setbackground"
                    android:paddingRight="10dp"
                     />
            </RelativeLayout>
			
            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_setleftbg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_middle_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/chinese_dia_tv_setleftbg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                     android:layout_centerVertical="true"
                    android:text="@string/left_image"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button 
                    android:id="@+id/chinese_dialog_chongzhileftbg_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/chongzhi_button_bg"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/chinese_dia_tv_setleftbg"
                    android:layout_alignTop="@+id/chinese_dia_tv_setleftbg"
                    android:paddingRight="10dp"
                     />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/chinese_dia_softsetting_chinese_snack"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/soft_setting_middle_selector"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                <TextView
                        android:id="@+id/chinese_setting_chinese_snack_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/chinese_snack"
                        android:textColor="#000"
                        android:textSize="17sp" />

                <TextView
                        android:id="@+id/chinese_setting_chinese_snack_showTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/chinese_setting_chinese_snack_title"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:scaleType="matrix" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_checkappversion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_last_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/chinese_banbenhao_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/version_number"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/chinese_dialog_textview_appversion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/chinese_banbenhao_textview"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:scaleType="matrix"
                    android:singleLine="true"
                    android:text="1.1.9" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:text="@string/server_config"
                android:textColor="#444444" />

            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_ftpset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/soft_setting_first_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/setting_ftp_adds"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:src="@drawable/softsetting_submenu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_ipset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_middle_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/ip_setting"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:src="@drawable/softsetting_submenu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chinese_dia_softsetting_updatedata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_setting_last_selector"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/update_information"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:src="@drawable/softsetting_submenu" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>