<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FFFFFF">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:layout_gravity="center_horizontal"
            android:background="#262766">
        <Button
                android:layout_width="35dip"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/wait_tuichu"
                android:id="@+id/wait_main_tuichu_but"/>
        <TextView
                android:layout_width="0dip"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:text="@string/wait_main_title"
                android:textColor="#FFFFFF"
                android:textSize="20dip"
                android:gravity="center"
                android:id="@+id/wait_main_title"/>
        <Button
                android:layout_width="35dip"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/wait_tv"
                android:id="@+id/wait_main_tv_but"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="12"
            android:background="@drawable/wait_main_bg"
            android:layout_height="0dip">
        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView">
            <cn.com.choicesoft.view.wait.MyRadioGroup
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wait_main_radios">
            </cn.com.choicesoft.view.wait.MyRadioGroup>
        </HorizontalScrollView>
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wait_main_list"
                    android:divider="#00000000"
                    android:dividerHeight="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingBottom="10dip"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:layout_gravity="center_horizontal|top"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wait_alert_up"
                    android:id="@+id/wait_main_up_qh"
                    android:layout_gravity="center_horizontal|bottom"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>