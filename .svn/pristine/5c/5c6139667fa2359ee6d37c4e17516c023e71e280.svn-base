<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".VipCardQuery" >
	<include
        android:id="@+id/vip_top"
        layout="@layout/vip_activity_top" />
    <LinearLayout
        android:id="@+id/vip_cardQ_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vip_cardQ_bottonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#C1C1C1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="right" >

            <Button
                android:id="@+id/vip_card_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/but_alone_bg"
                android:text="@string/vip_card_disButton" />

            <Button
                android:id="@+id/vip_card_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/but_alone_bg"
                android:text="@string/back" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
