<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:minWidth="150dip"
                        android:layout_height="80dip"
                        android:layout_margin="20px">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                    </LinearLayout>
                    <EditText
                            android:layout_width="90dip"
                            android:layout_height="45dip"
                            android:inputType="number"
                            android:gravity="center"
                            android:ems="10"
                            android:maxLines="1"
                            android:maxLength="3"
                            android:text="0"
                            android:textSize="30dip"
                            android:padding="0dp"
                            android:background="@color/transparent"
                            android:id="@+id/logout_time_edit"
                            android:layout_gravity="center_horizontal|bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginTop="18dip"
                            android:text="@string/logout_time"
                            android:layout_gravity="center_horizontal|top"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minute"
                            android:textColor="#000000"
                            android:layout_marginRight="10dip"
                            android:layout_marginBottom="5dip"
                            android:layout_gravity="right|bottom"/>
                </FrameLayout>
                <View android:layout_width="2dip"
                      android:layout_height="70dip"
                      android:layout_gravity="center"
                        android:background="#ff3cafd9"/>
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:minWidth="150dip"
                        android:layout_height="80dip"
                        android:layout_marginTop="20px"
                        android:layout_marginRight="20px">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                        </LinearLayout>
                        <EditText
                                android:layout_width="90dip"
                                android:layout_height="45dip"
                                android:inputType="number"
                                android:gravity="center"
                                android:ems="10"
                                android:maxLines="1"
                                android:text="0"
                                android:maxLength="3"
                                android:textSize="30dip"
                                android:padding="0dp"
                                android:background="@color/transparent"
                                android:id="@+id/close_time_edit"
                                android:layout_gravity="center_horizontal|bottom"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:layout_marginTop="18dip"
                                android:text="@string/close_app_time"
                                android:layout_gravity="center_horizontal|top"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minute"
                                android:textColor="#000000"
                                android:layout_marginRight="10dip"
                                android:layout_marginBottom="5dip"
                                android:layout_gravity="right|bottom"/>
                </FrameLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout_hint"
                android:textColor="#ff3f3f3f"
                android:textSize="11dip"
                android:id="@+id/textView4" android:layout_gravity="right"/>
</LinearLayout>