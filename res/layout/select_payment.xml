<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/tanchukuang">

    <Button
            android:paddingTop="10dip"
            android:paddingBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SA_xianJin"
            android:background="@color/transparent"
            android:textColor="#FFFFFF"
            android:id="@+id/pay_xianjin"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/lightgrey"></View>
    <Button
            android:paddingTop="5dip"
            android:paddingBottom="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SA_yinHangKa"
            android:background="@color/transparent"
            android:textColor="#FFFFFF"
            android:id="@+id/pay_yinhangka"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/lightgrey"></View>
    <Button
            android:paddingTop="5dip"
            android:paddingBottom="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SA_network"
            android:background="@color/transparent"
            android:textColor="#FFFFFF"
            android:id="@+id/pay_network"/>
</LinearLayout>