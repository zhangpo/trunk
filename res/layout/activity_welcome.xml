<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/welcome_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:orientation="vertical"
                android:padding="10dip">

    <LinearLayout
            android:id="@+id/welcome_Layout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/welcome_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="35dip"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/textView"
                    android:layout_alignBaseline="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentLeft="true"/>

            <EditText
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:ems="16"
                    android:hint="@string/input_user_name"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textSize="25sp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignLeft="@+id/userPassword"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_password"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/textView2"
                    android:gravity="right"
                    android:layout_alignBaseline="@+id/userPassword"
                    android:layout_alignBottom="@+id/userPassword"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignParentLeft="true"/>
            <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:digits="0123456789"
                    android:ems="16"
                    android:textSize="25sp"
                    android:hint="@string/input_user_password"
                    android:inputType="numberPassword"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:layout_below="@+id/userName"
                    android:layout_toRightOf="@+id/textView2"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <Button
                    android:id="@+id/welcome_one"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/one"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_tow"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/tow"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_three"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/three"
                    android:textSize="35sp"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <Button
                    android:id="@+id/welcome_four"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/four"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_five"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/five"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_six"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/six"
                    android:textSize="35sp"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <Button
                    android:id="@+id/welcome_seven"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/seven"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_eight"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/eight"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_nine"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/nine"
                    android:textSize="35sp"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <Button
                    android:id="@+id/welcome_delete"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/delete"
                    android:textSize="35sp"/>

            <Button
                    android:id="@+id/welcome_zero"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/zero"
                    android:textSize="35sp"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/welcome_succeed"
                    android:layout_width="0dip"
                    android:layout_height="90dip"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/calculator_but_bg"
                    android:text="@string/succeed"
                    android:textSize="35sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center">

            <Button
                    android:id="@+id/welcome_login"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/but_alone_bg"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

            <Button
                    android:id="@+id/welcome_reset"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/but_alone_bg"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/welcome_tv_androidId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/machine_code"/>

    <Button
            android:id="@+id/setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/setting"
            />

</RelativeLayout>