<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutline"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0C7190"
        android:gravity="center"
        android:text="@string/yuding_dis"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/yuding_orderList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#FFFFFF"
        android:cacheColorHint="#00000000"
        android:layout_marginRight="1px"
        android:descendantFocusability="beforeDescendants" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginRight="1px"
        android:padding="8dp" >
        <Button
            android:id="@+id/res_Order_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/red_button_background2"
            android:padding="2dp"
            android:text="@string/yuding_Order_off"
            android:textColor="#fff" />
        <Button
                android:id="@+id/res_jiacai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/red_button_background2"
                android:padding="2dp"
                android:text="@string/yixuan_jiacai"
                android:textColor="#fff" />
        <Button
                android:id="@+id/res_cancel_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/red_button_background2"
                android:padding="2dp"
                android:text="@string/yuding_cancel_table"
                android:textColor="#fff" />
        <Button
                android:id="@+id/res_Order_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/red_button_background2"
                android:padding="2dp"
                android:text="@string/cancle"
                android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>