<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:padding="10dip" >
    <LinearLayout
        android:id="@+id/welcome_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="25dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:minWidth="90dp"
                    android:maxWidth="120dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/user_name"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/edittext_bg"
                    android:ems="16"
                    android:hint="@string/input_user_name"
                    android:inputType="number"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/user_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/edittext_bg"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:ems="16"
                    android:hint="@string/input_user_password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/welcome_one"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/one"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_tow"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/tow"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_three"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/three"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/welcome_four"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/four"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_five"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/five"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_six"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/six"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/welcome_seven"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/seven"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_eight"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/eight"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_nine"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/nine"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/welcome_delete"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/delete"
                android:textSize="35sp" />

            <Button
                android:id="@+id/welcome_zero"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/zero"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/welcome_succeed"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="90dip"
                android:layout_weight="1"
                android:background="@drawable/calculator_but_bg"
                android:text="@string/succeed"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center" >

            <Button
                android:id="@+id/welcome_login"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@drawable/but_alone_bg"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <Button
                android:id="@+id/welcome_reset"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/but_alone_bg"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/welcome_tv_androidId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/machine_code" />

    <Button
        android:id="@+id/setting"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/setting"
        android:padding="8dp"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>