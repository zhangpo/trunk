<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="60dip"
              android:layout_margin="10dip"
              android:background="@drawable/wait_item_bg">


    <TextView
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="C2"
            android:textSize="20dip"
            android:textColor="#fffe1822"
            android:layout_margin="10dip"
            android:id="@+id/wait_item_hao"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/wait_item_phone_layout"
                      android:gravity="left|center">
            <ImageView android:layout_width="20dip"
                       android:layout_height="20dip"
                       android:background="@drawable/wait_dianhua2"
                       android:id="@+id/imageView2"/>
            <View android:layout_width="1dp"
                  android:layout_height="17dip"
                  android:background="#A2A2A2"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="10dip"
                      android:textColor="#000000"
                      android:layout_marginLeft="5dip"
                      android:text="15111111111"
                      android:id="@+id/wait_item_phone"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="left|center">
            <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/wait_renshu2"
                    android:id="@+id/imageView"/>
            <View android:layout_width="1dp"
                  android:layout_height="17dip"
                  android:background="#A2A2A2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textSize="10dip"
                    android:textColor="#000000"
                    android:text="5人"
                    android:id="@+id/wait_item_people"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="fill_parent">
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:textSize="10dip"
                android:text="取号时间：2015-07-03 16:09:17"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/wait_begin_time"
                android:gravity="center"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:textSize="10dip"
                android:text="等待1230分钟"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#00000000"
                android:id="@+id/wait_item_time"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_weight="6"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:gravity="center">
        <FrameLayout android:layout_width="45dip"
                     android:layout_height="45dip">
            <Button
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/wait_jiaohao_bg"
                    android:id="@+id/wait_item_jiaohao_but"
                    android:layout_gravity="center"/>
            <Button
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/wait_chexiao_bg"
                    android:id="@+id/wait_item_repeal_but"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dip"
                    android:paddingLeft="5dip"
                    android:background="@drawable/wait_hint_bg"
                    android:text="0"
                    android:textSize="10dip"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:id="@+id/wait_item_jiaohao_but_num"
                    android:layout_gravity="right|top"/>
        </FrameLayout>
        <Button
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/wait_jiucan_bg"
                android:layout_marginRight="5dip"
                android:id="@+id/wait_item_jiucan_but"/>
        <Button
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/wait_guohao_bg"
                android:id="@+id/wait_item_guohao_but"/>
    </LinearLayout>
</LinearLayout>