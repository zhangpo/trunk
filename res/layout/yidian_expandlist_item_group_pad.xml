<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/expandablelist_group_item_background"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="æ—¢"
                android:textColor="@color/green"
                android:id="@+id/yidian_text_jijiao"/>

        <TextView
            android:id="@+id/yidian_expand_item_group_dishesname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/yidian_expand_item_group_dishesplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/yidian_expand_item_group_dishescounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ADADAD"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/yidian_expand_item_group_dishesminus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/yidian_expand_item_group_dishesprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yidian_expand_item_group_dishesunit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yidian_expand_item_group_dishessubtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/yidian_expand_item_group_present"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/yidian_item_present" />

        <ImageView
            android:id="@+id/yidian_expand_item_group_addition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/yidian_item_addition" />

        <ImageView
            android:id="@+id/yidian_expand_item_group_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/yidian_item_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yidian_singlefujia_group_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:text="@string/yixuan_fujiaxiang"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/yidian_singlefujia_group_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>