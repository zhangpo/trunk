<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".VipCardQuery" >
    <include
        android:id="@+id/vip_top"
        layout="@layout/vip_activity_order_top" />
    <LinearLayout
        android:id="@+id/vip_cardQ_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.94"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vip_cardQ_bottonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#C1C1C1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="right" >

            <Button
                android:id="@+id/vip_card_confirm"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:background="@drawable/query_vipcard_btn_selector"
                android:textColor="@color/white"
                android:text="@string/vip_card_disButton" />

            <Button
                android:id="@+id/vip_card_cancle"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:background="@drawable/query_vipcard_btn_selector"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:text="@string/back" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
