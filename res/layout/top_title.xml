<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/topLinearLyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_bg_red"
            android:orientation="horizontal"
            android:padding="3dp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="left"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/eatable_btn_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_bg"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/orderinfo_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_info_icon"/>

            <ImageView
                    android:id="@+id/vipMsg_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip"
                    android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/toptitle_rg_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/toptitle_rb_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_left"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="6"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="9"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_mid"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="X"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/toptitle_rb_newvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/eatable_bg_radiobtn_right"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>