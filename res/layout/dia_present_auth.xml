<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dia_tv_presenttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="@string/authorization_number"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/yidian_et_authorizeId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dia_editor_n" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="@string/authorization_pwd"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/yidian_et_authorizepwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dia_editor_n"
            android:inputType="textPassword"
            android:password="true" />
    </LinearLayout>

    <cn.com.choicesoft.widget.WheelView
        android:id="@+id/dia_presentauth_wheelview"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dip"
        android:paddingTop="40dip" >

        <Button
            android:id="@+id/dia_btn_presentcertainbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/dia_btn_selector"
            android:padding="8dp"
            android:text="@string/give_food"
            android:textSize="19sp" />

        <Button
            android:id="@+id/dia_btn_presentcancelbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dip"
            android:layout_weight="1"
            android:background="@drawable/dia_btn_selector"
            android:padding="8dp"
            android:text="@string/cancle"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>