<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5.0dp"
        android:paddingRight="5.0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_jnow_authuser"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="22sp" />

        <cn.com.choicesoft.view.ClearEditText
            android:id="@+id/dia_jnow_authuser_et"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/dia_editor_n"
            android:drawableRight="@drawable/delete_selector"
            android:padding="8dp"
            android:textSize="20sp" >
        </cn.com.choicesoft.view.ClearEditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10.0dp"
        android:paddingLeft="5.0dp"
        android:paddingRight="5.0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_jnow_authpwd"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="22sp" />

        <cn.com.choicesoft.view.ClearEditText
            android:id="@+id/dia_jnow_authpwd_et"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/dia_editor_n"
            android:drawableRight="@drawable/delete_selector"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20sp" >
        </cn.com.choicesoft.view.ClearEditText>
    </LinearLayout>
    

