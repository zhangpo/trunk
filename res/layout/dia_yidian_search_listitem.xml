<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/expandablelist_group_item_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="9dip"
    android:paddingLeft="10dip"
    android:paddingTop="9dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="既"
                android:textColor="@color/lime"
                android:id="@+id/yidian_text_jijiao"/>

        <TextView
            android:id="@+id/yidian_search_listitem_dishesname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:layout_weight="8"
            android:maxLines="2"
            android:text="牛栏山"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/yidian_search_listitem_dishesplus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:layout_weight="2"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/yidian_search_listitem_dishescounts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:layout_weight="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/yidian_search_listitem_dishesminus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/minus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yidian_search_listitem_dishesprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="19"
                android:singleLine="true"
                android:gravity="right"
                android:text="20"
                android:paddingRight="6dp"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/yidian_search_listitem_dishesunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="24"
                android:singleLine="true"
                android:gravity="right"
                android:text="@string/money_or_unit"
                android:textColor="#000000"
                android:textSize="17sp" />

            <!-- <TextView
                android:id="@+id/yidian_search_listitem_dishessubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_weight="15"
                android:singleLine="true"
                android:text="60"
                android:textColor="#000000"
                android:textSize="17sp" /> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="9"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/yidian_search_listitem_present"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="40dip"
                android:layout_marginRight="5dp"
                android:src="@drawable/yidian_item_present" />

            <ImageView
                android:id="@+id/yidian_search_listitem_addition"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_weight="3"
                android:src="@drawable/yidian_item_addition" />

            <ImageView
                android:id="@+id/yidian_search_listitem_delete"
                 android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="40dip"
                android:src="@drawable/yidian_item_delete" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>